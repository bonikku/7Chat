<div class="form-group msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, class: "d-flex",
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
    <%= form.text_field :body, id: "chat-text", class: "form-control msg-content", autocomplete: 'off' %>
    <%= form.submit data: { disable_with: false }, class: "btn btn-primary btn-sm" %>
  <% end %>
</div>