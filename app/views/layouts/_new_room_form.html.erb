<%= form_with(model: @room, remote: true, class: "d-flex",
              data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
  <%= form.text_field :name, class: "form-control", autocomplete: 'off' %>
  <%= form.submit data: { disable_with: false } %>
<% end %>